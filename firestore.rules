rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null && hasRequiredPermissions();

      function hasRequiredPermissions() {
        let userClaims = request.auth.token;
        return userClaims.admin == true ||
               (userClaims.atm == true && request.resource.data.keys().hasAny(['read', 'write'])) ||
               (userClaims.student == true && request.resource.data.keys().hasAny(['read', 'write']) && request.resource.data.keys().hasOnly(['books', 'reservations', 'users']));
      }
    }
  }
}